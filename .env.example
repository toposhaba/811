# API Configuration
NODE_ENV=development
API_PORT=3000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# DynamoDB Tables
DYNAMODB_REQUESTS_TABLE=811-requests
DYNAMODB_DISTRICTS_TABLE=811-districts
DYNAMODB_STATUS_TABLE=811-status-updates

# S3 Buckets
S3_DOCUMENTS_BUCKET=811-documents
S3_ATTACHMENTS_BUCKET=811-attachments

# SQS Queues
SQS_REQUEST_QUEUE=811-request-queue
SQS_STATUS_QUEUE=811-status-queue

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Replicate Configuration
